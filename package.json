{
  "name": "fcarrascosa-slider",
  "version": "1.1.1",
  "description": "A simple slider based in web components via lit-element",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --mode development --open",
    "start:build": "http-server dist/ -o",
    "start:es5": "webpack-dev-server --mode development --es5",
    "start:storybook": "start-storybook -p 9001",
    "build": "webpack --mode production",
    "build:stats": "webpack --mode production --profile --json > bundle-stats.json",
    "build:storybook": "build-storybook -o _site",
    "test": "karma start --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:watch": "karma start --auto-watch=true --single-run=false --coverage",
    "test:es5": "karma start --legacy --coverage",
    "test:es5:watch": "karma start --legacy --auto-watch=true --single-run=false --coverage"
  },
  "keywords": [
    "lit-element",
    "lit-html",
    "javascript",
    "slider"
  ],
  "author": "Fernando Carrascosa",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/fcarrascosa/fcarrascosa-slider"
  },
  "dependencies": {
    "lit-element": "^2.2.1"
  },
  "devDependencies": {
    "@open-wc/building-webpack": "^2.6.3",
    "@open-wc/polyfills-loader": "^0.3.1",
    "@open-wc/storybook": "^0.2.0",
    "@open-wc/testing": "^2.0.5",
    "@open-wc/testing-karma": "^3.0.0",
    "@open-wc/testing-karma-bs": "^1.3.45",
    "@polymer/iron-component-page": "^4.0.1",
    "@polymer/iron-demo-helpers": "^3.0.2",
    "@polymer/iron-pages": "^3.0.1",
    "@webcomponents/webcomponentsjs": "^2.3.0",
    "chai": "^4.2.0",
    "deepmerge": "^4.0.0",
    "eslint": "^6.0.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "http-server": "^0.12.0",
    "karma-junit-reporter": "^2.0.1",
    "karma-mocha": "^1.3.0",
    "karma-sinon-chai": "^2.0.2",
    "mocha": "^6.2.1",
    "sinon": "^8.0.2",
    "sinon-chai": "^3.3.0",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.1",
    "webpack-merge": "^4.1.5"
  }
}
