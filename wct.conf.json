{
  "plugins": {
    "local": {
      "chrome": [
        "headless",
        "disable-gpu",
        "no-sandbox"
      ]
    },
    "istanbub": {
      "quiet": true,
      "dir": "coverage",
      "reporters": ["text-summary", "lcov"],
      "include": ["**/*.js", "**/*.html"],
      "exclude": ["**/test/**","**/node_modules/**"]
    }
  }
}
